<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WeatherDetailsActivity">

    <android.support.constraint.Guideline
        android:id="@+id/gl_v_0.03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_h_0.65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_h_0.20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/loginscreentopbg"
        app:layout_constraintBottom_toTopOf="@id/gl_h_0.20"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    
    <TextView
        android:id="@+id/tvDegree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Degree"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/gl_v_0.03"
        app:layout_constraintTop_toBottomOf="@id/gl_h_0.20"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvDegree"
        app:layout_constraintTop_toBottomOf="@id/gl_h_0.20"/>

    <TextView
        android:id="@+id/tvTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDegree"
        app:layout_constraintLeft_toRightOf="@id/gl_v_0.03"
        android:textSize="20sp"

        android:layout_marginTop="10dp"

        android:hint="temp"/>

    <TextView
        android:id="@+id/tvPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTemp"
        app:layout_constraintLeft_toRightOf="@id/gl_v_0.03"
        android:textSize="20sp"

        android:layout_marginTop="10dp"

        android:hint="Pressure"/>

    <TextView
        android:id="@+id/tvHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvPressure"
        app:layout_constraintLeft_toRightOf="@id/gl_v_0.03"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:hint="Humidity"/>

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvHumidity"
        app:layout_constraintLeft_toRightOf="@id/gl_v_0.03"
        android:layout_marginTop="10dp"
        android:textSize="20sp"


        android:hint="Speed"/>
    <TextView
        android:id="@+id/tvRain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSpeed"
        app:layout_constraintLeft_toRightOf="@id/gl_v_0.03"
        android:textSize="20sp"
        android:layout_marginTop="10dp"

        android:hint="Rain"/>

    <TextView
        android:id="@+id/tvClouds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvRain"
        app:layout_constraintLeft_toRightOf="@id/gl_v_0.03"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:hint="Rain"/>




</android.support.constraint.ConstraintLayout>